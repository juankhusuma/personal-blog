mixin navbar
    nav(class="font-source-code-pro flex justify-evenly w-full text-lg lg:p-5 md:p-3 p-2 items-center shadow-lg dark:text-gray-50 dark: dark:bg-gray-900")
        h1(class="font-extrabold cursor-pointer hover:underline")
            a(href="/") Home

        ul(class="flex justify-center align-center w-1/3 text-gray-800 dark:text-gray-300")
            each val in ['About', 'Tags', 'Contact']
                li(class="mr-8 text-sm font-medium cursor-pointer  hover:bg-gray-200 hover:text-black dark:hover:text-gray-100 px-5 py-1 hover:shadow-md dark:hover:bg-gray-800 rounded-md transition-colors")
                    a(class="")=val

        div(id="toggle" class="rounded-full bg-gray-200 hover:bg-gray-800 hover:text-gray-200 dark:bg-gray-800 transition-colors dark:hover:text-gray-800 dark:hover:bg-gray-50 w-8 h-8 flex justify-center items-center")
            i(class='bi bi-moon' id="toggle-indicator")

